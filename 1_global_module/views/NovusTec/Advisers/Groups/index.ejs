<%- contentFor('head')%>
<% include ./../css %>

<%- contentFor('body')%>

<body id="page-top" class="sidebar-toggled">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <% include ./../sidebar %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <% include ./../top-bar %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800" >Groups
                        <i  id="btn_help"  
                            style="font-size: 1.7rem;" 
                            class="fas fa-question-circle text-info"
                            data-trigger="hover" 
                            class="btn btn-circle" 
                            data-trigger="hover"
                            data-toggle="popover" 
                            title="Hello! adviser, welcome to the 'Novus' system." 
                            data-content="If you can't see any groups in the table, chances are you haven't been assigned a group; in this case, contact your system administrator, as he can assign you a group.">
                        </i>
